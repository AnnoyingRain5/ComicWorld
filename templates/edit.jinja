{% extends 'base.jinja' %}

{% block content %}
<div class="center">
    <div class="notepad">
        <div class="notepad-top"><img class="tack" src="https://yesterweb.org/img/bb/thumbtack.png"></div>
        <h1>{% block title %} Edit "{{ comic['title'] }}" {% endblock %}</h1>
    </div>
</div>
<div class="center">
    <div class="notepad">
        <div class="notepad-top"></div>
        <h3>Set a new title for the comic:</h3>
        <form method="post">
            <div class="form-group">
                <label for="title">Title</label>
                <input type="text" name="title" placeholder="Post title" class="form-control"
                    value="{{ request.form['title'] or comic['title'] }}">
            </div>
            <div class="form-group">
                <label for="series">Series</label>
                <select name="series" id="series" , style="width: 175px">
                    <option value="None">No series</option>
                    {% for series_name in series %}
                    <option value="{{series_name[0]}}">{{series_name[0]}}</option>
                    {% endfor %}
                </select>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </form>
    </div>
</div>
<div class="center">
    <div class="notepad">
        <div class="notepad-top"></div>
        <h3>Or, alternatively, delete it!</h3>
        <form action="{{ url_for('delete', id=comic['id']) }}" method="POST">
            <input type="submit" value="Delete Comic" class="btn btn-danger btn-sm"
                onclick="return confirm('Are you sure you want to delete this comic?')">
        </form>
    </div>
</div>
{% endblock %}
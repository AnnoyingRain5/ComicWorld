{% extends 'base.jinja' %}

{% block content %}
<div class="center">
    <div class="notepad">
        <div class="notepad-top"><img class="tack" src="https://yesterweb.org/img/bb/thumbtack.png"></div>
        <h1>{% block title %} Administration Panel {% endblock %}</h1>
    </div>
</div>
<div class="notecontainer">
    <div class="sticky {{['s1','s2', 's3', 's4']|random}}">
        <h3>Create a new signup code</h3>
        <form action="/admin/create_signup_code" method="post">
            <input type="text" name="code" placeholder="code">
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
    <div class="sticky {{['s1','s2', 's3', 's4']|random}}">
        <h3>Add a new artist</h3>
        <form action="/admin/create_artist" method="post">
            <input type="text" name="username" placeholder="Username">
            <input type="password" name="password" placeholder="Password">
            <br>
            <label for="isadmin">Make them an admin?</label>
            <input type="checkbox" name="isadmin">
            <br>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
    <div class="sticky {{['s1','s2', 's3', 's4']|random}}">
        <h3>Lock artist's account</h3>
        <form action="/admin/lock_artist" method="post">
            <input type="text" name="username" placeholder="Username">
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
    <div class="sticky {{['s1','s2', 's3', 's4']|random}}">
        <h3>Unlock artist's account</h3>
        <form action="/admin/unlock_artist" method="post">
            <input type="text" name="username" placeholder="Username">
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
    <div class="sticky {{['s1','s2', 's3', 's4']|random}}">
        <h3>Delete artist</h3>
        <form action="/admin/delete_artist" method="post">
            <input type="text" name="username" placeholder="Username">
            <button type="submit" class="btn btn-primary"
                onclick="return confirm('Are you sure you want to DELETE this user?')">Submit</button>
        </form>
    </div>
    <!-- This fake element is only here to ensure that the final sticky isn't forced to be an extra row down -->
    <div style="visibility:hidden; height:0px; width: 20em"></div>
</div>
{% endblock %}
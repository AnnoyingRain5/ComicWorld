{% extends 'base.jinja' %}
{% from 'macros/notepad.jinja' import notepad %}

{% block content %}
{% call notepad("Create a new series") %}
<form method="post" enctype=multipart/form-data>
    <div class="form-group">
        <label for="name">Series name</label>
        <input type="text" name="name" placeholder="Series Name" class="form-control"
            value="{{ request.form['name'] }}">
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>
{% endcall %}
{% endblock %}